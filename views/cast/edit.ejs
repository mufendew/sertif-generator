<%- include('../fragment/head',{title: "Event" }); %>

  <body>
    <%- include('../fragment/nav'); %>
      <div class="container">
        <div class="row justify-content-center" style="margin-top:25px;margin-bottom: 25px;">
          <div class="col-sm-6">
            <h2 style="text-align:center;">Add artis papan bawah</h2>
            <h6 style="text-align:center;"><a href="/cast"> List Artis</a></h6>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-6">
            <form action="" method="POST">
              <div class="row">
                <div class="form-group col-6">
                  <label>First Name</label>
                  <input type="text" name="first_name" value="<%=data.first_name%>" class="form-control">
                </div>
                <div class="form-group col-6">
                  <label>Last Name</label>
                  <input type="text" name="last_name" value="<%=data.last_name%>" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label>Birth Year</label>
                <input type="number" name="birth_year" value="<%=data.birth_year%>" class="form-control">
              </div>

              <div class="form-group">
                <label>Phone Number</label>
                <input type="tel" name="phone_number" value="<%=data.phone_number%>" class="form-control">
              </div>

              <label>Gender</label>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios1" value="Female"
                  <%=data.gender==="Female" ? "checked" : "" %>>
                <label class="form-check-label" for="exampleRadios1">
                  Female
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="Male"
                  <%=data.gender==="Male" ? "checked" : "" %>>
                <label class="form-check-label" for="exampleRadios2">
                  Male
                </label>
              </div>

              <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
          </div>
        </div>
      </div>
  </body>

  </html>