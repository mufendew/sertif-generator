<%- include('../fragment/head',{title: "Add student"}); %>
<body>
    <%- include('../fragment/nav'); %>
    <div class="container">
        <div class="row justify-content-center" style="margin-top:25px;margin-bottom: 25px;">
            <div class="col-sm-6">
                <h2 style="text-align:center;"><%= movie.name %></h2>
                <h6 style="text-align:center;"><a href="/movie"> List Movie</a></h6>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <label for=""><b>Cast Pelem <%= movie.name %></b></label>
                <table class="table">
                    <thead>
                      <tr>
                        <th width="50">ID</th>
                        <th>Name</th>
                        <th>Role</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% movie.Casts.forEach(e=>{ %>
                            <tr>
                              <th><%= e.id %> </th>
                              <td><%= e.getFullName() %> </td>
                              <td><%= e.MovieCast.role %> </td>
                            </tr>
                            <% }) %>
              
                    </tbody>
                </table>
            </div>
            <div class="col-sm-6">
                <form action="" method="POST">
                    <div class="form-group">
                        <label>Actor / Cast</label>
                        <select name="id_cast" class="form-control  <%= err.id_cast ? "is-invalid" : "" %>">
                            <option value="" disabled selected>---Pilih Actor/Cast---</option>
                            <% actor.forEach(el=>{ %>
                                <option value="<%= el.id %>"><%= el.getFullName() %></option>
                            <% }) %>
                        </select>
                        <div class="invalid-feedback">
                            <%= err.id_cast %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Role</label>
                        <input type="text" name="role" class="form-control <%= err.role ? "is-invalid" : "" %>">
                        <div class="invalid-feedback">
                            <%= err.role %>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>