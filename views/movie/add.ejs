<%- include('../fragment/head',{title: "Add student"}); %>
<body>
    <%- include('../fragment/nav'); %>
    <div class="container">
        <div class="row justify-content-center" style="margin-top:25px;margin-bottom: 25px;">
            <div class="col-sm-6">
                <h2 style="text-align:center;">Add Pelem Layar Lebar</h2>
                <h6 style="text-align:center;"><a href="/movie"> List Movie</a></h6>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <form action="" method="POST">
                    <div class="row">
                        <div class="form-group col-8">
                            <label>Name</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="form-group col-4">
                            <label>Year Release</label>
                            <input type="number" name="released_year" class="form-control <%= err.released_year ? "is-invalid" : "" %>">
                            <div class="invalid-feedback">
                                <%= err.released_year %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>Genre</label>
                        <select name="genre" class="form-control">
                            <option value="" disabled selected>---Pilih Genre---</option>
                            <option value="Animation">Animation</option>
                            <option value="Comedy">Comedy</option>
                            <option value="Drama">Drama</option>
                            <option value="Horror">Horror</option>
                            <option value="Religius">Religius</option>
                            <option value="Thriller">Thriller</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Production House</label>
                        <select name="id_prodction" class="form-control">
                                <option value="" disabled selected>---Pilih Production House---</option>
                            <% data.forEach(el=>{ %>
                                <option value="<%= el.id %>"><%= el.name_prodHouse %></option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>